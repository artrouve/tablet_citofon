<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:layout_height="230dp"
    android:gravity="center_vertical"
    android:layout_margin="1dp"
    android:padding="1dp"

    android:orientation="horizontal">

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="220dp"

        android:stretchColumns="1"
        android:paddingLeft="1dp"
        android:paddingRight="1dp">
        <TableRow>

            <ImageView
                android:id="@+id/plateImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                />
        </TableRow>


    </TableLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="false"
        android:layout_centerVertical="false"

        android:orientation="horizontal"
        >


        <TextView
            android:id="@+id/textViewPLATE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"

            android:background="@color/black"
            android:textSize="28sp"
            android:textColor="#F00"
            android:textStyle="bold"/>

        <ImageButton
            android:id="@+id/buttonViewPlateDetectedList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_alignParentEnd="false"
            android:layout_centerVertical="false"
            app:srcCompat="@drawable/ic_view_plate"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"/>




    </LinearLayout>



    <ImageButton
        android:id="@+id/buttonDeletePlateDetectedList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="false"
        app:srcCompat="@drawable/ic_delete_plate"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"/>

</RelativeLayout>