<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="15dp"
        android:paddingTop="10dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:stretchColumns="1">
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="@string/apartmentList"/>

            <TextView
                android:id="@+id/textViewApartmentDialog"
                android:layout_width="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginStart="24dp"
                android:layout_height="wrap_content"/>
        </TableRow>

        <TableRow
            android:id="@+id/rowParking"
            android:visibility="gone">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="@string/parkingNumberList"/>

            <TextView
                android:id="@+id/textViewParkingDialog"
                android:layout_width="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginStart="24dp"
                android:layout_height="wrap_content"/>
        </TableRow>

        <TableRow
            android:id="@+id/rowLicensePlate"
            android:visibility="gone">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="@string/vehicleList"/>

            <TextView
                android:id="@+id/textViewLicensePlateDialog"
                android:layout_width="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginStart="24dp"
                android:layout_height="wrap_content"/>
        </TableRow>

    </TableLayout>

    <ProgressBar
        android:id="@+id/indeterminateBar"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textViewAlertDialog"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/red"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingBottom="15dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="24dp"
        android:textSize="22sp"
        android:text="@string/visits"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@color/black"/>

    <ListView android:id="@+id/visitListDialog"
        android:paddingEnd="24dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>

</LinearLayout>