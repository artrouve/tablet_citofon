<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="24dp"
    android:id="@+id/linearExitParcel">

    <LinearLayout
        android:id="@+id/visitListLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:baselineAligned="false"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/rutTextLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/rutInput"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:hint="@string/rut"
                android:digits="1234567890K.-"
                android:inputType="textCapCharacters"
                android:cursorVisible="false"
                android:imeOptions="actionDone"
                android:textSize="18sp"
                android:maxLength="12"
                android:maxLines="1"
                android:singleLine="true"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/fullnameTextLayout"
            android:layout_width="wrap_content"
            android:paddingBottom="24dp"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/fullnameInput"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:hint="@string/fullname"
                android:cursorVisible="false"
                android:inputType="textCapCharacters"
                android:imeOptions="actionDone"
                android:textSize="18sp"
                android:maxLines="1"
                android:digits="qwertyuiopasdfghjklñzxcvbnmQWERTYUIOPASDFGHJKLÑZXCVBNM "
                android:maxLength="44"
                android:singleLine="true"/>

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/visitButtonListLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:paddingTop="0dp"
        android:gravity="start">

        <Button
            android:id="@+id/buttonRegisterInfoExitParcel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:text="@string/register"
            style="@style/Widget.AppCompat.Button.Colored"/>

    </LinearLayout>



    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:paddingTop="10dp"
        android:stretchColumns="1">

        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fullNameList"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/textViewfullName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textSize="16sp"
                android:textStyle="bold"/>
        </TableRow>

        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/documentNumberList"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/textViewDocumentNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textSize="16sp"
                android:textStyle="bold"/>
        </TableRow>
    </TableLayout>
</LinearLayout>